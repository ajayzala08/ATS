                </div>

                <div class="form-group">
                    <p>Branch <span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EBranch, new { @class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>IFSC Code<span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EIFC_Code, new { @class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>PF Account Number <span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EPFAccount, new { @class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>PAN card number <span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
