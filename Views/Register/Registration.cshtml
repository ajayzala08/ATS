            <div class="rightcontact">
                <div class="form-group">
                    <p>Salary <span></span></p><span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.ESalary, new { @Class = "ggg", @type = "number" })
                    <div class="validation"></div>
                </div>
                <div class="form-group">
                    <p>Provident Fund <span></span></p><span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EPF, new { @Class = "ggg", @type = "number" })
                    <div class="validation"></div>
                </div>
                <div class="form-group">
                    <p>Proffesional Tax (%) <span></span></p><span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EPT, new { @class = "ggg", @type = "number" })
                    <div class="validation"></div>
                </div>
                <div class="form-group">
                    <p>ESI <span></span></p><span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EESI, new { @class = "ggg", @type = "number" })
                    <div class="validation"></div>
                </div>
                <div class="form-group check">
                    <p>What Applied <span></span></p><span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.CheckBoxFor(m => m.EPFApply, new { @class = "ggg" }) PF Apply
                    @Html.CheckBoxFor(m => m.EPTApply, new { @class = "ggg" })PT Apply
                    @Html.CheckBoxFor(m => m.EESIApply, new { @class = "ggg" })ESI Apply

                </div>

                <div class="form-group check relative">
                    <p>File Upload <span></span></p>
                    <span class="icon-case"><i class="fas fa-upload"></i></span>
                    <input type="file" name="userimage" id="userimage" />
                    <p>Image Size Upto 50 KB</p>
                </div>
                <style>
                    #userimage {
                        width: 75%;
                    }
                </style>
            </div>

        </div>

        <div class="clear-fix"></div>


        <button type="submit" class="bouton-contact">Save</button>
