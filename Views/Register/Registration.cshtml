@model ATS2019_2.Models.UserModel
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Register/_BlankPage.cshtml";
}

@using (Html.BeginForm("Registration", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form class="onlyform">
        <h1>User Registration</h1>
        <div class="contentform">
            @if (ViewBag.msg != null)
            {
                <div id="sendmessage">
                    "User data already exists";
                </div>
            }


            <div class="leftcontact">
                <div class="form-group">
                    <p>Employee Id<span> * </span></p>
                    <span class="icon-case"><i class="fa fa-male"></i></span>
                    @Html.TextBoxFor(m => m.ECode, new { @Class = "ggg", @required = "required", @id="empid", @readonly="readonly" })

                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Full Name <span> * </span></p>
                    <span class="icon-case"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(m => m.EFullname, new { @Class = "ggg", @required = "required" })

                    <div class="validation"></div>
                </div>

                <div class="gender">
                    <p>Gender <span> * </span></p>
                    <span class="icon-case"><i class="fa fa-user"></i></span>
                    @Html.DropDownListFor(m => m.EGender, new List<SelectListItem> { new SelectListItem { Text = "Male", Value = "Male" }, new SelectListItem { Text = "Female", Value = "Female" } }, "Select", new { @class = "ggg" })

                </div>

                <div class="form-group">
                    <p>E-mail <span> * </span></p>
                    <span class="icon-case"><i class="fas fa-at"></i></span>
                    @Html.TextBoxFor(m => m.EEmail, new { @class = "ggg", @type = "email", @required = "required" })
                    <div class="validation"></div>
                </div>

                <div class="form-group date">
                    <p>Date Of Birth <span> * </span></p>
                    <span class="icon-case"><i class="fas fa-birthday-cake"></i></span>
                    @Html.TextBoxFor(m => m.EDOB, new { @Class = "ggg", @type = "date" })
                </div>

                <div class="form-group">
                    <p>Parmanent Address <span></span></p>
                    <span class="icon-case"><i class="fa fa-location-arrow"></i></span>
                    @Html.TextAreaFor(m => m.EAddress, new { @rows = "14" })

                </div>

                <div class="form-group">
                    <p>Current Address <span></span></p>
                    <span class="icon-case"><i class="fa fa-location-arrow"></i></span>
                    @Html.TextAreaFor(m => m.ECAddress, new { @rows = "14" })

                </div>

                <div class="form-group">
                    <p>Postcode <span></span> </p>
                    <span class="icon-case"><i class="fa fa-map-marker"></i></span>
                    @Html.TextBoxFor(m => m.EPostal, new { @class = "ggg", @type = "number", @maxlength = "6", })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Phone number <span> </span> </p>
                    <span class="icon-case"><i class="fa fa-phone"></i></span>
                    @Html.TextBoxFor(m => m.EContNo, new { @class = "ggg", @type = "number", @maxlength = "10", })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Emergency Contact Number<span> </span></p>
                    <span class="icon-case"><i class="fa fa-phone"></i></span>
                    @Html.TextBoxFor(m => m.EEmergencyContNo, new { @class = "ggg", @type = "number", @maxlength = "10", })

                    <div class="validation"></div>
                </div>


            </div>

            <div class="rightcontact">

                <div class="form-group">
                    <p>Type <span>*</span></p>
                    <span class="icon-case"><i class="fas fa-unlock-alt"></i></span>
                    @Html.DropDownListFor(m => m.EEtype, new List<SelectListItem> { @*new SelectListItem { Text = "Permanent", Value = "Permanent" }, new SelectListItem { Text = "Temporary", Value = "Temporary" },*@ new SelectListItem { Text = "Contract", Value = "Contract" } }, "Select")
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Company Name <span>*</span></p>
                    <span class="icon-case"><i class="far fa-building"></i></span>
                    @Html.TextBoxFor(m => m.ECompany_Name, new { @Class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Department <span>*</span></p>
                    <span class="icon-case"><i class="fa fa-info"></i></span>
                    @Html.TextBoxFor(m => m.EDepartment, new { @Class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Designation <span>*</span></p>
                    <span class="icon-case"><i class="fas fa-briefcase"></i></span>
                    @Html.TextBoxFor(m => m.EDesignation, new { @Class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Location <span>*</span></p>
                    <span class="icon-case"><i class="fas fa-location-arrow"></i></span>
                    @Html.TextBoxFor(m => m.ELocation, new { @Class = "ggg" })
                    <div class="validation"></div>
                </div>

                <div class="form-group date">
                    <p>Offer Date<span>*</span></p>
                    <span class="icon-case"><i class="far fa-clock"></i></span>
                    @Html.TextBoxFor(m => m.EOfferDate, new { @Class = "ggg", @type = "date" })
                </div>

                <div class="form-group date">
                    <p>Join Date <span>*</span></p>
                    <span class="icon-case"><i class="far fa-clock"></i></span>
                    @Html.TextBoxFor(m => m.EJoinDate, new { @Class = "ggg", @type = "date" })
                </div>

                <div class="form-group">
                    <p>Role <span>*</span></p>
                    <span class="icon-case"><i class="fas fa-unlock-alt"></i></span>
                    @Html.DropDownListFor(m => m.ERole, new List<SelectListItem> { @*new SelectListItem { Text = "Admin", Value = "Admin" }, new SelectListItem { Text = "Manager", Value = "Manager" }, new SelectListItem { Text = "Sales", Value = "Sales" }, new SelectListItem { Text = "VP", Value = "VP" }, new SelectListItem { Text = "Teamlead", Value = "Teamlead" }, new SelectListItem { Text = "Recruiter", Value = "Recruiter" }, new SelectListItem { Text = "IT", Value = "IT" }, new SelectListItem { Text = "HR", Value = "HR" }, new SelectListItem { Text = "Account", Value = "Account" },*@ new SelectListItem { Text = "Contract", Value = "Contract" } }, "Select Role", new { @Class = "ggg" })

                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>User Name <span>*</span></p>
                    <span class="icon-case"><i class="fa fa-info"></i></span>
                    @Html.TextBoxFor(m => m.EUserName, new { @class = "ggg", @required = "required" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Password <span>*</span></p>
                    <span class="icon-case"><i class="fas fa-unlock"></i></span>
                    @Html.PasswordFor(m => m.EPassword, new { @class = "ggg", @required = "required" })

                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Retype Password <span> * </span> @Html.ValidationMessageFor(m => m.ERetype)</p>
                    <span class="icon-case"><i class="fas fa-unlock-alt"></i></span>
                    @Html.PasswordFor(m => m.ERetype, new { @class = "ggg", @required = "required" })
                    <div class="validation"></div>
                </div>

                <div class="form-group">
                    <p>Blood Group <span></span></p>
                    <span class="icon-case"><i class="fas fa-user"></i></span>
                    @Html.TextBoxFor(m => m.EBloodGroup, new { @class = "ggg" })
                    <div class="validation"></div>
                </div>

            </div>

        </div>

        @*</form>

            <form class="onlyform">*@
        <h1>Bank Details</h1>
        <div class="contentform">
            <div class="leftcontact">
                <div class="form-group">
                    <p>Bank Name<span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EBankName, new { @class = "ggg" })
