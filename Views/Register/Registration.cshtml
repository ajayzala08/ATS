                </div>

                <div class="form-group">
                    <p>Account Number<span></span></p>
                    <span class="icon-case"><i class="fas fa-rupee-sign"></i></span>
                    @Html.TextBoxFor(m => m.EAccountNo, new { @class = "ggg", @type = "number" })
