        @section scripts{

            <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
            <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.jqueryui.min.js"></script>

            <script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
            <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
            <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
            <script scr="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>
            <script src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js"></script>
            <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.colVis.min.js"></script>

            <script>
                $(document).ready(function () {

                    $("#myTable").DataTable({
                        "processing": true, // for show progress bar
                        //"serverSide": true, // for process server side
                        "filter": true, // this is for disable filter (search box)
                        "orderMulti": true, // for disable multiple column at once

                        "ajax": {
                            "url": "/ATS/LoadTobejoinDataList",
                            "type": "GET",
                            "datatype": "json",
                        },
                        "columns": [
                            { "data": "name", "name": "name", "autoWidth": true },
                            { "data": "client", "name": "clent", "autoWidth": true },
                            { "data": "skill", "name": "skill", "autoWidth": true },
                            { "data": "location", "name": "location", "autoWidth": true },
                            { "data": "type", "name": "type", "autoWidth": true },
                            {
                                "data": "seldate",
                                'render': function (date) {
                                    var date = new Date(parseInt(date.substr(6)));
                                    var month = date.getMonth() + 1;
                                    return date.getDate() + "/" + month + "/" + date.getFullYear();
                                }
                            },
                            {
                                "data": "offdate",
                                'render': function (date) {
                                    var date = new Date(parseInt(date.substr(6)));
                                    var month = date.getMonth() + 1;
                                    return date.getDate() + "/" + month + "/" + date.getFullYear();
                                }
                            },
                            {
                                "data": "joindate",
                                'render': function (date) {
                                    var date = new Date(parseInt(date.substr(6)));
                                    var month = date.getMonth() + 1;
                                    return date.getDate() + "/" + month + "/" + date.getFullYear();
                                }
                            },
                            { "data": "recruitername", "name": "recruitername", "autoWidth": true },
                            {// this is Actions Column
                                mRender: function (data, type, row) {
                                    var intlink = '<a class="offerclass"  oid=' + row.oid + '>' + row.status + '</a>';
                                    return intlink;
                                }
                            },
                            {
                                mRender: function (data, type, row) {
                                    var statuslink = '<a class="statusclass" oid=' + row.oid + '>Change Status</a>';
                                    return statuslink;
                                }
                            }

                        ],
                        dom: 'Bfrtip',
                        buttons: [
                            {
                                extend: 'excel',
                                messageTop: 'To Be Join List',
                                exportOptions: {
                                    columns: ':visible'
                                }
                            },
                            {
                                extend: 'csv',
                                messageTop: 'To Be Join List',
                                exportOptions: {
                                    columns: ':visible'
                                }
                            },
                            {
                                extend: 'pdf',
                                messageTop: 'To Be Join List',
                                exportOptions: {
                                    columns: ':visible'
                                }
                            },
                            'colvis'
                        ],
                        select: true
                    });
                    $("#myTable").on('click', '.statusclass', function () {

                        var ooid = $(this).attr("oid");
                        $("#offeerid").val(ooid);
                        $("#mainpopup").css('visibility', 'visible');
                    });
                    //close popup
                    $(".close").click(function () {
                        $("#mainpopup").css('visibility', 'hidden');
                    });

                    $("#btnofferstatuse").click(function () {

                        var tbjoid = $("#offeerid").val();
                        var tbjstat = $("#drpstatus").val();
                        alert(tbjoid + "-" + tbjstat);
                        $.ajax({
                            url: 'Changetobejoinstatus',
                            datatype: 'json',
                            type: 'post',
                            data: { oid: tbjoid, stat: tbjstat },
                            success: function () {
                                window.location.reload();
                            }

                        });


                    });

                });
            </script>
        }


    </form>

