                                }
                                else {
                                    tblintimerow += "<td style='color: red'>" + result.data.intime[item] + "</td>";
                                }
                                if (result.data.missingpunchstatus[item] == 0) {
                                    tblfirsthalfrow += "<td >" + result.data.firstHalf[item] + "</td>";
                                }
                                else {
