                                else {
                                    if (inminute >= parseInt("480")) {
                                        totaltimerow += "<td style='color:Green;font-weight:bold;'>" + result.data.totaltime[item] + "</td>";
                                    }
                                    else {
                                        totaltimerow += "<td style='color:red;font-weight:bold;'>" + result.data.totaltime[item] + "</td>";
                                    }
                                }
